<div class="field"><label for="store_category">定休日</label><br />
<%= text_field 'store', 'close' %></div>

<div class="field"><label for="store_address">住所</label><br />
<%= text_field 'store', 'address', {:style => 'width:400px'} %><input type="button" name="latlng" value="緯度・経度に変換" onclick="addr2latlng();return false;" /></div>

