<script src="http://maps.google.com/maps?file=api&amp;v=2.x&amp;key=<%=googleapikey%>" type="text/javascript" charset="UTF-8"></script>
<script type="text/javascript">
//<![CDATA[
var geocoder = new GClientGeocoder();

function addr2latlng() {
	geocoder.getLatLng( $("#store_address").val(), setLatLng );
}

function setLatLng (latlng) {
	if (!latlng) {
		alert("ご指定の住所（" + $("#store_address").val() + "）はジオコーディングできませんでした。");
	}
	else 
	{
		$("#store_lat").val(latlng.lat());
		$("#store_lng").val(latlng.lng());
	}
}
//]]>
</script>

<% unless @store.errors.empty? %>
<div id="errors"><%= error_messages_for 'store' %></div>
<% end %>

<!--[form:store]-->
<div class="field required"><label for="store_name">店名</label><br />
<%= text_field 'store', 'name' %></div>

